<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    tools:context=".ui.common.BarcodeScannerActivity">

    <!-- Camera Preview -->
    <androidx.camera.view.PreviewView
        android:id="@+id/previewView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Top Overlay -->
    <View
        android:id="@+id/topOverlay"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:background="@drawable/gradient_top_scrim"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Close Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnClose"
        style="@style/Widget.Material3.Button.IconButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_small"
        android:layout_marginTop="@dimen/margin_medium"
        app:icon="@drawable/ic_close"
        app:iconTint="@android:color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Title -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_medium"
        android:gravity="center"
        android:text="@string/scan_barcode"
        android:textAppearance="@style/TextAppearance.Inventario.Title"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/btnClose"
        app:layout_constraintEnd_toStartOf="@id/btnFlash" />

    <!-- Flash Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnFlash"
        style="@style/Widget.Material3.Button.IconButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_small"
        android:layout_marginTop="@dimen/margin_medium"
        app:icon="@drawable/ic_flash"
        app:iconTint="@android:color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Scan Frame -->
    <View
        android:id="@+id/scanFrame"
        android:layout_width="280dp"
        android:layout_height="180dp"
        android:background="@drawable/scan_frame_corners"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Scan Line Animation -->
    <View
        android:id="@+id/scanLine"
        android:layout_width="260dp"
        android:layout_height="2dp"
        android:background="@color/secondary"
        app:layout_constraintTop_toTopOf="@id/scanFrame"
        app:layout_constraintStart_toStartOf="@id/scanFrame"
        app:layout_constraintEnd_toEndOf="@id/scanFrame" />

    <!-- Hint Text -->
    <TextView
        android:id="@+id/tvHint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_medium"
        android:text="@string/scanner_hint"
        android:textColor="@android:color/white"
        android:textAppearance="@style/TextAppearance.Inventario.Body"
        android:alpha="0.8"
        app:layout_constraintTop_toBottomOf="@id/scanFrame"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Bottom Overlay -->
    <View
        android:id="@+id/bottomOverlay"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:background="@drawable/gradient_bottom_scrim"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Manual Entry Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnManualEntry"
        style="@style/Widget.Material3.Button.OutlinedButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_large"
        android:text="@string/enter_manually"
        android:textColor="@android:color/white"
        app:icon="@drawable/ic_barcode_small"
        app:iconTint="@android:color/white"
        app:strokeColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
