<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:colorBackground">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:navigationIcon="@drawable/ic_arrow_back"
            app:title="@string/add_product" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/padding_medium">

            <!-- Product Image Section -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Widget.Inventario.CardView.Outlined">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/padding_medium"
                    android:gravity="center_horizontal">

                    <FrameLayout
                        android:layout_width="@dimen/product_image_large"
                        android:layout_height="@dimen/product_image_large">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/ivProductImage"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_placeholder_product"
                            android:background="@color/surface_variant"
                            app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Medium" />

                        <com.google.android.material.floatingactionbutton.FloatingActionButton
                            android:id="@+id/fabAddImage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom|end"
                            android:layout_margin="@dimen/margin_small"
                            android:src="@drawable/ic_add"
                            app:fabSize="mini"
                            app:tint="@android:color/white"
                            android:contentDescription="@string/add_image" />

                    </FrameLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_small"
                        android:text="@string/tap_to_add_image"
                        android:textAppearance="?textAppearanceBodySmall"
                        android:textColor="@color/text_hint" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Basic Information -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_large"
                android:text="@string/basic_information"
                android:textAppearance="?textAppearanceTitleMedium"
                android:textStyle="bold" />

            <!-- Product Name -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilProductName"
                style="@style/Widget.Inventario.TextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_medium"
                android:hint="@string/product_name"
                app:startIconDrawable="@drawable/ic_inventory"
                app:errorEnabled="true">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etProductName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textCapWords"
                    android:maxLines="1" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Barcode -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilBarcode"
                style="@style/Widget.Inventario.TextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_small"
                android:hint="@string/barcode"
                app:startIconDrawable="@drawable/ic_barcode_scanner"
                app:endIconMode="custom"
                app:endIconDrawable="@drawable/ic_barcode_scanner"
                app:endIconContentDescription="@string/scan_barcode">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etBarcode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:maxLines="1"
                    android:fontFamily="monospace" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- SKU -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilSku"
                style="@style/Widget.Inventario.TextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_small"
                android:hint="@string/product_sku"
                app:helperText="@string/optional">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etSku"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textCapCharacters"
                    android:maxLines="1" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Category Dropdown -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilCategory"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_small"
                android:hint="@string/category"
                app:startIconDrawable="@drawable/ic_category"
                app:errorEnabled="true">

                <AutoCompleteTextView
                    android:id="@+id/actvCategory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="none" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Description -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilDescription"
                style="@style/Widget.Inventario.TextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_small"
                android:hint="@string/description"
                app:helperText="@string/optional"
                app:counterEnabled="true"
                app:counterMaxLength="500">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine|textCapSentences"
                    android:minLines="2"
                    android:maxLines="4"
                    android:gravity="top" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Pricing Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_large"
                android:text="@string/pricing"
                android:textAppearance="?textAppearanceTitleMedium"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/margin_medium"
                android:baselineAligned="false">

                <!-- Cost Price -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilCostPrice"
                    style="@style/Widget.Inventario.TextInputLayout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="@dimen/margin_small"
                    android:hint="@string/cost_price"
                    app:prefixText="₲"
                    app:errorEnabled="true">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etCostPrice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:maxLines="1" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Sale Price -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilSalePrice"
                    style="@style/Widget.Inventario.TextInputLayout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="@dimen/margin_small"
                    android:hint="@string/sale_price"
                    app:prefixText="₲"
                    app:errorEnabled="true">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etSalePrice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:maxLines="1" />

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

            <!-- Profit Margin Display -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardProfitMargin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_small"
                app:cardBackgroundColor="@color/surface_variant"
                app:cardElevation="0dp"
                app:cardCornerRadius="@dimen/corner_radius_small"
                android:visibility="gone"
                tools:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/padding_medium"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/profit_margin"
                        android:textAppearance="?textAppearanceBodyMedium" />

                    <TextView
                        android:id="@+id/tvProfitMargin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?textAppearanceTitleMedium"
                        android:textStyle="bold"
                        android:textColor="@color/success"
                        tools:text="35%" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Stock Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_large"
                android:text="@string/stock_configuration"
                android:textAppearance="?textAppearanceTitleMedium"
                android:textStyle="bold" />

            <!-- Initial Stock -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilInitialStock"
                style="@style/Widget.Inventario.TextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_medium"
                android:hint="@string/initial_stock"
                app:startIconDrawable="@drawable/ic_inventory"
                app:errorEnabled="true">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etInitialStock"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:maxLines="1"
                    android:text="0" />

            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/margin_small"
                android:baselineAligned="false">

                <!-- Minimum Stock -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilMinStock"
                    style="@style/Widget.Inventario.TextInputLayout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="@dimen/margin_small"
                    android:hint="@string/minimum_stock"
                    app:helperText="@string/alert_when_below">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etMinStock"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:maxLines="1"
                        android:text="5" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Maximum Stock -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilMaxStock"
                    style="@style/Widget.Inventario.TextInputLayout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="@dimen/margin_small"
                    android:hint="@string/maximum_stock"
                    app:helperText="@string/optional">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etMaxStock"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:maxLines="1" />

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

            <!-- Supplier Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_large"
                android:text="@string/supplier"
                android:textAppearance="?textAppearanceTitleMedium"
                android:textStyle="bold" />

            <!-- Supplier Dropdown -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilSupplier"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_medium"
                android:hint="@string/select_supplier"
                app:startIconDrawable="@drawable/ic_person"
                app:helperText="@string/optional">

                <AutoCompleteTextView
                    android:id="@+id/actvSupplier"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="none" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Has Variants Switch -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_large"
                style="@style/Widget.Inventario.CardView.Outlined">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/padding_medium"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/has_variants"
                            android:textAppearance="?textAppearanceTitleSmall" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/has_variants_description"
                            android:textAppearance="?textAppearanceBodySmall"
                            android:textColor="@color/text_secondary" />

                    </LinearLayout>

                    <com.google.android.material.materialswitch.MaterialSwitch
                        android:id="@+id/switchHasVariants"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Variants Section (shown when switch is on) -->
            <LinearLayout
                android:id="@+id/layoutVariants"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/margin_medium"
                android:visibility="gone"
                tools:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/product_variants"
                        android:textAppearance="?textAppearanceTitleMedium"
                        android:textStyle="bold" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnAddVariant"
                        style="@style/Widget.Material3.Button.TextButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/add_variant"
                        app:icon="@drawable/ic_add" />

                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvVariants"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_small"
                    android:nestedScrollingEnabled="false"
                    tools:listitem="@layout/item_variant_edit"
                    tools:itemCount="2" />

                <TextView
                    android:id="@+id/tvNoVariants"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="@dimen/padding_large"
                    android:text="@string/no_variants_added"
                    android:textAppearance="?textAppearanceBodyMedium"
                    android:textColor="@color/text_hint" />

            </LinearLayout>

            <!-- Spacer for save button -->
            <Space
                android:layout_width="match_parent"
                android:layout_height="80dp" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- Save Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSave"
        style="@style/Widget.Inventario.Button.Primary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_margin="@dimen/margin_medium"
        android:text="@string/save_product"
        app:icon="@drawable/ic_add" />

    <!-- Loading Overlay -->
    <FrameLayout
        android:id="@+id/loadingOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80FFFFFF"
        android:clickable="true"
        android:focusable="true"
        android:visibility="gone">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />

    </FrameLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
