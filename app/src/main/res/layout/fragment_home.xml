<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipe_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/padding_medium">

                <!-- Header with greeting -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="@dimen/margin_medium">

                    <TextView
                        android:id="@+id/tv_greeting"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/TextAppearance.Inventario.Headline2"
                        tools:text="Â¡Hola, Juan!"/>

                    <TextView
                        android:id="@+id/tv_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/TextAppearance.Inventario.BodySmall"
                        tools:text="Lunes, 15 de enero 2024"/>

                </LinearLayout>

                <!-- Stats Cards Row 1 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="@dimen/margin_small">

                    <!-- Sales Today -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardTodaySales"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="@dimen/margin_small"
                        app:cardBackgroundColor="@color/primary"
                        app:cardCornerRadius="@dimen/corner_large"
                        app:cardElevation="@dimen/elevation_small">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="@dimen/padding_medium">

                            <ImageView
                                android:layout_width="@dimen/stat_card_icon_size"
                                android:layout_height="@dimen/stat_card_icon_size"
                                android:src="@drawable/ic_money"
                                android:contentDescription="@null"
                                app:tint="@color/text_on_primary"/>

                            <TextView
                                android:id="@+id/tvTodaySales"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/margin_small"
                                android:textColor="@color/text_on_primary"
                                android:textSize="@dimen/text_title"
                                android:textStyle="bold"
                                tools:text="Gs. 2.500.000"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/sales_today"
                                android:textColor="@color/overlay_light"
                                android:textSize="@dimen/text_small"/>

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <!-- Transactions Today -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/card_transactions"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:cardBackgroundColor="@color/secondary"
                        app:cardCornerRadius="@dimen/corner_large"
                        app:cardElevation="@dimen/elevation_small">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="@dimen/padding_medium">

                            <ImageView
                                android:layout_width="@dimen/stat_card_icon_size"
                                android:layout_height="@dimen/stat_card_icon_size"
                                android:src="@drawable/ic_cart"
                                android:contentDescription="@null"
                                app:tint="@color/text_on_secondary"/>

                            <TextView
                                android:id="@+id/tv_transactions_value"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/margin_small"
                                android:textColor="@color/text_on_secondary"
                                android:textSize="@dimen/text_title"
                                android:textStyle="bold"
                                tools:text="24"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/transactions_today"
                                android:textColor="@color/overlay_light"
                                android:textSize="@dimen/text_small"/>

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>

                <!-- Stats Cards Row 2 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="@dimen/margin_medium">

                    <!-- Total Products -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/card_products"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="@dimen/margin_small"
                        app:cardBackgroundColor="@color/card_background"
                        app:cardCornerRadius="@dimen/corner_large"
                        app:cardElevation="@dimen/elevation_small">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="@dimen/padding_medium">

                            <ImageView
                                android:layout_width="@dimen/stat_card_icon_size"
                                android:layout_height="@dimen/stat_card_icon_size"
                                android:src="@drawable/ic_inventory"
                                android:contentDescription="@null"
                                app:tint="@color/info"/>

                            <TextView
                                android:id="@+id/tv_products_value"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/margin_small"
                                android:textColor="@color/text_primary"
                                android:textSize="@dimen/text_title"
                                android:textStyle="bold"
                                tools:text="156"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/total_products"
                                android:textColor="@color/text_secondary"
                                android:textSize="@dimen/text_small"/>

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <!-- Low Stock Alerts -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/card_alerts"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:cardBackgroundColor="@color/card_background"
                        app:cardCornerRadius="@dimen/corner_large"
                        app:cardElevation="@dimen/elevation_small">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="@dimen/padding_medium">

                            <ImageView
                                android:layout_width="@dimen/stat_card_icon_size"
                                android:layout_height="@dimen/stat_card_icon_size"
                                android:src="@drawable/ic_warning"
                                android:contentDescription="@null"/>

                            <TextView
                                android:id="@+id/tv_alerts_value"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/margin_small"
                                android:textColor="@color/warning"
                                android:textSize="@dimen/text_title"
                                android:textStyle="bold"
                                tools:text="8"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/low_stock_alerts"
                                android:textColor="@color/text_secondary"
                                android:textSize="@dimen/text_small"/>

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>

                <!-- Quick Actions -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_small"
                    android:text="@string/quick_actions"
                    android:textAppearance="@style/TextAppearance.Inventario.Title"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="@dimen/margin_medium">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_new_sale"
                        style="@style/Widget.Inventario.Button.Outlined"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="@dimen/margin_small"
                        android:text="@string/new_sale"
                        app:icon="@drawable/ic_cart"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_add_product"
                        style="@style/Widget.Inventario.Button.Outlined"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/add_product"
                        app:icon="@drawable/ic_add"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="@dimen/margin_medium">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnScanProduct"
                        style="@style/Widget.Inventario.Button.Outlined"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="@dimen/margin_small"
                        android:text="@string/scan_barcode"
                        app:icon="@drawable/ic_barcode_scanner"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnViewReports"
                        style="@style/Widget.Inventario.Button.Outlined"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/view_reports"
                        app:icon="@drawable/ic_reports"/>

                </LinearLayout>

                <!-- Recent Sales -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="@dimen/margin_small">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/recent_sales"
                        android:textAppearance="@style/TextAppearance.Inventario.Title"/>

                    <TextView
                        android:id="@+id/tv_see_all_sales"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/all"
                        android:textColor="@color/primary"
                        android:textSize="@dimen/text_body"/>

                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_recent_sales"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    tools:itemCount="3"
                    tools:listitem="@layout/item_sale"/>

                <!-- Empty State -->
                <LinearLayout
                    android:id="@+id/layout_empty_sales"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="@dimen/padding_large"
                    android:visibility="gone"
                    tools:visibility="visible">

                    <ImageView
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:src="@drawable/ic_cart"
                        android:contentDescription="@null"
                        app:tint="@color/text_hint"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_small"
                        android:text="@string/empty_sales"
                        android:textColor="@color/text_secondary"/>

                </LinearLayout>

                <!-- Low Stock Products -->
                <LinearLayout
                    android:id="@+id/layout_low_stock"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/margin_medium"
                    android:visibility="gone"
                    tools:visibility="visible">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_small"
                        android:text="@string/low_stock_alerts"
                        android:textAppearance="@style/TextAppearance.Inventario.Title"
                        android:drawablePadding="@dimen/padding_small"
                        app:drawableStartCompat="@drawable/ic_warning"/>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_low_stock"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false"
                        tools:itemCount="3"
                        tools:listitem="@layout/item_product_compact"/>

                </LinearLayout>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <!-- Loading Overlay -->
    <FrameLayout
        android:id="@+id/layout_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/overlay_light"
        android:visibility="gone"
        tools:visibility="gone">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"/>

    </FrameLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
