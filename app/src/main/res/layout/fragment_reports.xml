<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="@string/reports" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/margin_medium">

                <!-- Date Range Selector Card -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/Widget.Inventario.CardView.Outlined">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/padding_medium">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/date_range"
                            android:textAppearance="@style/TextAppearance.Inventario.Caption"
                            android:textColor="?attr/colorOnSurfaceVariant" />

                        <!-- Date Range Chips -->
                        <HorizontalScrollView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_small"
                            android:scrollbars="none">

                            <com.google.android.material.chip.ChipGroup
                                android:id="@+id/chipGroupDateRange"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:singleSelection="true"
                                app:selectionRequired="true">

                                <com.google.android.material.chip.Chip
                                    android:id="@+id/chipToday"
                                    style="@style/Widget.Material3.Chip.Filter"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:checked="true"
                                    android:text="@string/today" />

                                <com.google.android.material.chip.Chip
                                    android:id="@+id/chipWeek"
                                    style="@style/Widget.Material3.Chip.Filter"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/this_week" />

                                <com.google.android.material.chip.Chip
                                    android:id="@+id/chipMonth"
                                    style="@style/Widget.Material3.Chip.Filter"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/this_month" />

                                <com.google.android.material.chip.Chip
                                    android:id="@+id/chipCustom"
                                    style="@style/Widget.Material3.Chip.Filter"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/custom" />

                            </com.google.android.material.chip.ChipGroup>

                        </HorizontalScrollView>

                        <!-- Custom Date Range Layout -->
                        <LinearLayout
                            android:id="@+id/layoutCustomDate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_medium"
                            android:orientation="vertical"
                            android:visibility="gone"
                            tools:visibility="visible">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <com.google.android.material.button.MaterialButton
                                    android:id="@+id/btnStartDate"
                                    style="@style/Widget.Material3.Button.OutlinedButton"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:layout_marginEnd="@dimen/margin_small"
                                    android:text="@string/start_date"
                                    app:icon="@drawable/ic_reports" />

                                <com.google.android.material.button.MaterialButton
                                    android:id="@+id/btnEndDate"
                                    style="@style/Widget.Material3.Button.OutlinedButton"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="@string/end_date"
                                    app:icon="@drawable/ic_reports" />

                            </LinearLayout>

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btnApplyDateRange"
                                style="@style/Widget.Inventario.Button.Primary"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/margin_small"
                                android:text="@string/apply" />

                        </LinearLayout>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Sales Summary Card -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_medium"
                    style="@style/Widget.Inventario.CardView.Outlined">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/padding_medium">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/sales_summary"
                            android:textAppearance="?textAppearanceTitleMedium"
                            android:textStyle="bold" />

                        <!-- Total Sales -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_medium"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="@dimen/icon_size_medium"
                                android:layout_height="@dimen/icon_size_medium"
                                android:src="@drawable/ic_money"
                                app:tint="@color/success"
                                android:contentDescription="@null" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="@dimen/margin_medium"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/total_sales"
                                    android:textAppearance="?textAppearanceBodySmall"
                                    android:textColor="@color/text_secondary" />

                                <TextView
                                    android:id="@+id/tvTotalSales"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="?textAppearanceHeadlineSmall"
                                    android:textColor="@color/success"
                                    android:textStyle="bold"
                                    tools:text="Gs. 5.250.000" />

                            </LinearLayout>

                        </LinearLayout>

                        <!-- Transaction Count -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_medium"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="@dimen/icon_size_medium"
                                android:layout_height="@dimen/icon_size_medium"
                                android:src="@drawable/ic_cart"
                                app:tint="@color/info"
                                android:contentDescription="@null" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="@dimen/margin_medium"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/transactions"
                                    android:textAppearance="?textAppearanceBodySmall"
                                    android:textColor="@color/text_secondary" />

                                <TextView
                                    android:id="@+id/tvTransactionCount"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="?textAppearanceTitleLarge"
                                    android:textStyle="bold"
                                    tools:text="45 ventas" />

                            </LinearLayout>

                        </LinearLayout>

                        <!-- Average Sale -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_medium"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="@dimen/icon_size_medium"
                                android:layout_height="@dimen/icon_size_medium"
                                android:src="@drawable/ic_reports"
                                app:tint="@color/primary"
                                android:contentDescription="@null" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="@dimen/margin_medium"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/average_sale"
                                    android:textAppearance="?textAppearanceBodySmall"
                                    android:textColor="@color/text_secondary" />

                                <TextView
                                    android:id="@+id/tvAverageSale"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="?textAppearanceTitleLarge"
                                    android:textStyle="bold"
                                    tools:text="Gs. 116.667" />

                            </LinearLayout>

                        </LinearLayout>

                        <!-- Total Profit -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_medium"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="@dimen/icon_size_medium"
                                android:layout_height="@dimen/icon_size_medium"
                                android:src="@drawable/ic_money"
                                app:tint="@color/success"
                                android:contentDescription="@null" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="@dimen/margin_medium"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/total_profit"
                                    android:textAppearance="?textAppearanceBodySmall"
                                    android:textColor="@color/text_secondary" />

                                <TextView
                                    android:id="@+id/tvTotalProfit"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="?textAppearanceTitleLarge"
                                    android:textColor="@color/success"
                                    android:textStyle="bold"
                                    tools:text="Gs. 1.500.000" />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Payment Methods Card -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_medium"
                    style="@style/Widget.Inventario.CardView.Outlined">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/padding_medium">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/payment_methods"
                            android:textAppearance="?textAppearanceTitleMedium"
                            android:textStyle="bold" />

                        <!-- Cash -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_medium"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <View
                                android:layout_width="12dp"
                                android:layout_height="12dp"
                                android:background="@drawable/bg_circle"
                                android:backgroundTint="@color/success" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="@dimen/margin_small"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/payment_cash"
                                    android:textAppearance="?textAppearanceBodyMedium" />

                                <TextView
                                    android:id="@+id/tvCashTotal"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="?textAppearanceBodySmall"
                                    android:textColor="@color/text_secondary"
                                    tools:text="Gs. 3.250.000" />

                            </LinearLayout>

                            <TextView
                                android:id="@+id/tvCashPercentage"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?textAppearanceBodyMedium"
                                android:textStyle="bold"
                                tools:text="65%" />

                        </LinearLayout>

                        <!-- Card -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_small"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <View
                                android:layout_width="12dp"
                                android:layout_height="12dp"
                                android:background="@drawable/bg_circle"
                                android:backgroundTint="@color/info" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="@dimen/margin_small"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/payment_card"
                                    android:textAppearance="?textAppearanceBodyMedium" />

                                <TextView
                                    android:id="@+id/tvCardTotal"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="?textAppearanceBodySmall"
                                    android:textColor="@color/text_secondary"
                                    tools:text="Gs. 1.250.000" />

                            </LinearLayout>

                            <TextView
                                android:id="@+id/tvCardPercentage"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?textAppearanceBodyMedium"
                                android:textStyle="bold"
                                tools:text="25%" />

                        </LinearLayout>

                        <!-- Transfer -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_small"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <View
                                android:layout_width="12dp"
                                android:layout_height="12dp"
                                android:background="@drawable/bg_circle"
                                android:backgroundTint="@color/warning" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="@dimen/margin_small"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/payment_transfer"
                                    android:textAppearance="?textAppearanceBodyMedium" />

                                <TextView
                                    android:id="@+id/tvTransferTotal"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="?textAppearanceBodySmall"
                                    android:textColor="@color/text_secondary"
                                    tools:text="Gs. 750.000" />

                            </LinearLayout>

                            <TextView
                                android:id="@+id/tvTransferPercentage"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?textAppearanceBodyMedium"
                                android:textStyle="bold"
                                tools:text="10%" />

                        </LinearLayout>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Inventory Summary Card -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_medium"
                    style="@style/Widget.Inventario.CardView.Outlined">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/padding_medium">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/inventory_summary"
                            android:textAppearance="?textAppearanceTitleMedium"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_medium"
                            android:orientation="horizontal"
                            android:baselineAligned="false">

                            <!-- Total Products -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:gravity="center">

                                <TextView
                                    android:id="@+id/tvTotalProducts"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="?textAppearanceHeadlineSmall"
                                    android:textStyle="bold"
                                    tools:text="125" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/total_products"
                                    android:textAppearance="?textAppearanceBodySmall"
                                    android:textColor="@color/text_secondary" />

                            </LinearLayout>

                            <!-- Low Stock -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:gravity="center">

                                <TextView
                                    android:id="@+id/tvLowStockCount"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="?textAppearanceHeadlineSmall"
                                    android:textColor="@color/warning"
                                    android:textStyle="bold"
                                    tools:text="8" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/low_stock"
                                    android:textAppearance="?textAppearanceBodySmall"
                                    android:textColor="@color/text_secondary" />

                            </LinearLayout>

                            <!-- Out of Stock -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:gravity="center">

                                <TextView
                                    android:id="@+id/tvOutOfStockCount"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="?textAppearanceHeadlineSmall"
                                    android:textColor="@color/error"
                                    android:textStyle="bold"
                                    tools:text="3" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/out_of_stock"
                                    android:textAppearance="?textAppearanceBodySmall"
                                    android:textColor="@color/text_secondary" />

                            </LinearLayout>

                        </LinearLayout>

                        <!-- Inventory Value -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_medium"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/inventory_value"
                                android:textAppearance="?textAppearanceBodySmall"
                                android:textColor="@color/text_secondary" />

                            <TextView
                                android:id="@+id/tvInventoryValue"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?textAppearanceTitleLarge"
                                android:textColor="@color/primary"
                                android:textStyle="bold"
                                tools:text="Gs. 25.500.000" />

                        </LinearLayout>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Chart Placeholder Card -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_medium"
                    style="@style/Widget.Inventario.CardView.Outlined">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/padding_medium">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/sales_chart"
                            android:textAppearance="?textAppearanceTitleMedium"
                            android:textStyle="bold" />

                        <!-- Chart Placeholder -->
                        <TextView
                            android:id="@+id/tvChartPlaceholder"
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:layout_marginTop="@dimen/margin_small"
                            android:gravity="center"
                            android:text="@string/chart_coming_soon"
                            android:textAppearance="?textAppearanceBodyMedium"
                            android:textColor="@color/text_hint"
                            android:background="@color/surface_variant" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Top Products Card -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_medium"
                    style="@style/Widget.Inventario.CardView.Outlined">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/padding_medium">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/top_products"
                            android:textAppearance="?textAppearanceTitleMedium"
                            android:textStyle="bold" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rvTopProducts"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_small"
                            android:nestedScrollingEnabled="false"
                            tools:listitem="@layout/item_top_product"
                            tools:itemCount="5" />

                        <TextView
                            android:id="@+id/tvNoTopProducts"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_small"
                            android:gravity="center"
                            android:padding="@dimen/padding_large"
                            android:text="@string/no_top_products"
                            android:textAppearance="?textAppearanceBodyMedium"
                            android:textColor="@color/text_hint"
                            android:visibility="gone" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Export Buttons -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_large"
                    android:orientation="horizontal">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnExportSales"
                        style="@style/Widget.Inventario.Button.Outlined"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="@dimen/margin_small"
                        android:text="@string/export_sales"
                        app:icon="@drawable/ic_download" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnExportInventory"
                        style="@style/Widget.Inventario.Button.Outlined"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/export_inventory"
                        app:icon="@drawable/ic_download" />

                </LinearLayout>

                <!-- Spacer -->
                <Space
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_large" />

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <!-- Loading Overlay -->
    <FrameLayout
        android:id="@+id/loadingOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80FFFFFF"
        android:clickable="true"
        android:focusable="true"
        android:visibility="gone">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />

    </FrameLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>