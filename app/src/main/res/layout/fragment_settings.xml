<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="@string/settings" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/margin_medium">

            <!-- User Profile Card - CAMBIADO de cardProfile a cardUserProfile -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardUserProfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Widget.Inventario.CardView.Filled"
                android:clickable="true"
                android:focusable="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/padding_medium"
                    android:gravity="center_vertical">

                    <!-- Avatar con inicial del usuario -->
                    <FrameLayout
                        android:layout_width="@dimen/icon_xlarge"
                        android:layout_height="@dimen/icon_xlarge">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/ivUserAvatar"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:background="?attr/colorPrimaryContainer"
                            app:shapeAppearanceOverlay="@style/ShapeAppearance.Inventario.Circle" />

                        <!-- AGREGADO: TextView para la inicial del usuario -->
                        <TextView
                            android:id="@+id/tvUserInitial"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:textAppearance="?textAppearanceTitleLarge"
                            android:textColor="?attr/colorPrimary"
                            android:textStyle="bold"
                            tools:text="J" />

                    </FrameLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="@dimen/margin_medium"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvUserName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="@style/TextAppearance.Inventario.Title"
                            tools:text="Juan Pérez" />

                        <TextView
                            android:id="@+id/tvUserRole"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="@style/TextAppearance.Inventario.Body"
                            android:textColor="?attr/colorOnSurfaceVariant"
                            tools:text="Propietario" />

                        <TextView
                            android:id="@+id/tvUserEmail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="@style/TextAppearance.Inventario.Caption"
                            android:textColor="?attr/colorOnSurfaceVariant"
                            tools:text="juan@mitienda.com" />

                    </LinearLayout>

                    <ImageView
                        android:layout_width="@dimen/icon_small"
                        android:layout_height="@dimen/icon_small"
                        android:src="@drawable/ic_arrow_forward"
                        android:contentDescription="@null"
                        app:tint="?attr/colorOnSurfaceVariant" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Business Settings Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_large"
                android:layout_marginStart="@dimen/margin_small"
                android:text="@string/business_settings"
                android:textAppearance="@style/TextAppearance.Inventario.Caption"
                android:textColor="?attr/colorPrimary"
                android:textStyle="bold" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_small"
                style="@style/Widget.Inventario.CardView.Outlined">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Business Info -->
                    <LinearLayout
                        android:id="@+id/itemBusinessInfo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/padding_medium"
                        android:gravity="center_vertical"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true">

                        <ImageView
                            android:layout_width="@dimen/icon_medium"
                            android:layout_height="@dimen/icon_medium"
                            android:src="@drawable/ic_business"
                            android:contentDescription="@null"
                            app:tint="?attr/colorOnSurfaceVariant" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="@dimen/margin_medium"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/business_info"
                                android:textAppearance="@style/TextAppearance.Inventario.Body" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/business_info_description"
                                android:textAppearance="@style/TextAppearance.Inventario.Caption"
                                android:textColor="?attr/colorOnSurfaceVariant" />

                        </LinearLayout>

                        <ImageView
                            android:layout_width="@dimen/icon_small"
                            android:layout_height="@dimen/icon_small"
                            android:src="@drawable/ic_arrow_forward"
                            android:contentDescription="@null"
                            app:tint="?attr/colorOnSurfaceVariant" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginStart="56dp"
                        android:background="?attr/colorOutlineVariant" />

                    <!-- Categories -->
                    <LinearLayout
                        android:id="@+id/itemCategories"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/padding_medium"
                        android:gravity="center_vertical"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true">

                        <ImageView
                            android:layout_width="@dimen/icon_medium"
                            android:layout_height="@dimen/icon_medium"
                            android:src="@drawable/ic_category"
                            android:contentDescription="@null"
                            app:tint="?attr/colorOnSurfaceVariant" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="@dimen/margin_medium"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/categories"
                                android:textAppearance="@style/TextAppearance.Inventario.Body" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/categories_description"
                                android:textAppearance="@style/TextAppearance.Inventario.Caption"
                                android:textColor="?attr/colorOnSurfaceVariant" />

                        </LinearLayout>

                        <ImageView
                            android:layout_width="@dimen/icon_small"
                            android:layout_height="@dimen/icon_small"
                            android:src="@drawable/ic_arrow_forward"
                            android:contentDescription="@null"
                            app:tint="?attr/colorOnSurfaceVariant" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginStart="56dp"
                        android:background="?attr/colorOutlineVariant" />

                    <!-- Suppliers -->
                    <LinearLayout
                        android:id="@+id/itemSuppliers"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/padding_medium"
                        android:gravity="center_vertical"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true">

                        <ImageView
                            android:layout_width="@dimen/icon_medium"
                            android:layout_height="@dimen/icon_medium"
                            android:src="@drawable/ic_person"
                            android:contentDescription="@null"
                            app:tint="?attr/colorOnSurfaceVariant" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="@dimen/margin_medium"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/suppliers"
                                android:textAppearance="@style/TextAppearance.Inventario.Body" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/suppliers_description"
                                android:textAppearance="@style/TextAppearance.Inventario.Caption"
                                android:textColor="?attr/colorOnSurfaceVariant" />

                        </LinearLayout>

                        <ImageView
                            android:layout_width="@dimen/icon_small"
                            android:layout_height="@dimen/icon_small"
                            android:src="@drawable/ic_arrow_forward"
                            android:contentDescription="@null"
                            app:tint="?attr/colorOnSurfaceVariant" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginStart="56dp"
                        android:background="?attr/colorOutlineVariant" />

                    <!-- Users (Owner only) -->
                    <LinearLayout
                        android:id="@+id/itemUsers"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/padding_medium"
                        android:gravity="center_vertical"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:visibility="gone"
                        tools:visibility="visible">

                        <ImageView
                            android:layout_width="@dimen/icon_medium"
                            android:layout_height="@dimen/icon_medium"
                            android:src="@drawable/ic_person"
                            android:contentDescription="@null"
                            app:tint="?attr/colorOnSurfaceVariant" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="@dimen/margin_medium"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/users"
                                android:textAppearance="@style/TextAppearance.Inventario.Body" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/users_description"
                                android:textAppearance="@style/TextAppearance.Inventario.Caption"
                                android:textColor="?attr/colorOnSurfaceVariant" />

                        </LinearLayout>

                        <ImageView
                            android:layout_width="@dimen/icon_small"
                            android:layout_height="@dimen/icon_small"
                            android:src="@drawable/ic_arrow_forward"
                            android:contentDescription="@null"
                            app:tint="?attr/colorOnSurfaceVariant" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Sync Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_large"
                android:layout_marginStart="@dimen/margin_small"
                android:text="@string/sync_settings"
                android:textAppearance="@style/TextAppearance.Inventario.Caption"
                android:textColor="?attr/colorPrimary"
                android:textStyle="bold" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_small"
                style="@style/Widget.Inventario.CardView.Outlined">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/padding_medium">

                    <!-- Sync Status -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:id="@+id/ivSyncStatus"
                            android:layout_width="@dimen/icon_medium"
                            android:layout_height="@dimen/icon_medium"
                            android:src="@drawable/ic_cloud"
                            android:contentDescription="@null"
                            app:tint="@color/success" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="@dimen/margin_medium"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvSyncStatus"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/sync_status_synced"
                                android:textAppearance="@style/TextAppearance.Inventario.Body" />

                            <TextView
                                android:id="@+id/tvLastSync"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="@style/TextAppearance.Inventario.Caption"
                                android:textColor="?attr/colorOnSurfaceVariant"
                                tools:text="Última sync: Hace 5 min" />

                            <TextView
                                android:id="@+id/tvPendingChanges"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="@style/TextAppearance.Inventario.Caption"
                                android:textColor="@color/warning"
                                android:visibility="gone"
                                tools:text="3 cambios pendientes"
                                tools:visibility="visible" />

                        </LinearLayout>

                        <!-- AGREGADO: ProgressBar de sincronización -->
                        <ProgressBar
                            android:id="@+id/progressSync"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginEnd="@dimen/margin_small"
                            android:visibility="gone"
                            tools:visibility="visible" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnSyncNow"
                            style="@style/Widget.Material3.Button.TextButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/sync_now" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="@dimen/margin_medium"
                        android:background="?attr/colorOutlineVariant" />

                    <!-- Server Config -->
                    <LinearLayout
                        android:id="@+id/itemServerConfig"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_medium"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true">

                        <ImageView
                            android:layout_width="@dimen/icon_medium"
                            android:layout_height="@dimen/icon_medium"
                            android:src="@drawable/ic_cloud"
                            android:contentDescription="@null"
                            app:tint="?attr/colorOnSurfaceVariant" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="@dimen/margin_medium"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/server_config"
                                android:textAppearance="@style/TextAppearance.Inventario.Body" />

                            <TextView
                                android:id="@+id/tvServerUrl"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="@style/TextAppearance.Inventario.Caption"
                                android:textColor="?attr/colorOnSurfaceVariant"
                                tools:text="https://api.mitienda.com" />

                        </LinearLayout>

                        <ImageView
                            android:layout_width="@dimen/icon_small"
                            android:layout_height="@dimen/icon_small"
                            android:src="@drawable/ic_arrow_forward"
                            android:contentDescription="@null"
                            app:tint="?attr/colorOnSurfaceVariant" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- App Settings Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_large"
                android:layout_marginStart="@dimen/margin_small"
                android:text="@string/app_settings"
                android:textAppearance="@style/TextAppearance.Inventario.Caption"
                android:textColor="?attr/colorPrimary"
                android:textStyle="bold" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_small"
                style="@style/Widget.Inventario.CardView.Outlined">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Dark Mode -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/padding_medium"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="@dimen/icon_medium"
                            android:layout_height="@dimen/icon_medium"
                            android:src="@drawable/ic_dark_mode"
                            android:contentDescription="@null"
                            app:tint="?attr/colorOnSurfaceVariant" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="@dimen/margin_medium"
                            android:text="@string/dark_mode"
                            android:textAppearance="@style/TextAppearance.Inventario.Body" />

                        <com.google.android.material.materialswitch.MaterialSwitch
                            android:id="@+id/switchDarkMode"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginStart="56dp"
                        android:background="?attr/colorOutlineVariant" />

                    <!-- Sound Effects -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/padding_medium"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="@dimen/icon_medium"
                            android:layout_height="@dimen/icon_medium"
                            android:src="@drawable/ic_volume"
                            android:contentDescription="@null"
                            app:tint="?attr/colorOnSurfaceVariant" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="@dimen/margin_medium"
                            android:text="@string/sound_effects"
                            android:textAppearance="@style/TextAppearance.Inventario.Body" />

                        <com.google.android.material.materialswitch.MaterialSwitch
                            android:id="@+id/switchSoundEffects"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="true" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginStart="56dp"
                        android:background="?attr/colorOutlineVariant" />

                    <!-- Low Stock Notifications -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/padding_medium"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="@dimen/icon_medium"
                            android:layout_height="@dimen/icon_medium"
                            android:src="@drawable/ic_warning"
                            android:contentDescription="@null"
                            app:tint="?attr/colorOnSurfaceVariant" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="@dimen/margin_medium"
                            android:text="@string/low_stock_notifications"
                            android:textAppearance="@style/TextAppearance.Inventario.Body" />

                        <com.google.android.material.materialswitch.MaterialSwitch
                            android:id="@+id/switchLowStockNotifications"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="true" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Help Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_large"
                android:layout_marginStart="@dimen/margin_small"
                android:text="@string/help_section"
                android:textAppearance="@style/TextAppearance.Inventario.Caption"
                android:textColor="?attr/colorPrimary"
                android:textStyle="bold" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_small"
                style="@style/Widget.Inventario.CardView.Outlined">

                <LinearLayout
                    android:id="@+id/itemHelp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/padding_medium"
                    android:gravity="center_vertical"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true">

                    <ImageView
                        android:layout_width="@dimen/icon_medium"
                        android:layout_height="@dimen/icon_medium"
                        android:src="@drawable/ic_help"
                        android:contentDescription="@null"
                        app:tint="?attr/colorOnSurfaceVariant" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="@dimen/margin_medium"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/help_support"
                            android:textAppearance="@style/TextAppearance.Inventario.Body" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/help_support_description"
                            android:textAppearance="@style/TextAppearance.Inventario.Caption"
                            android:textColor="?attr/colorOnSurfaceVariant" />

                    </LinearLayout>

                    <ImageView
                        android:layout_width="@dimen/icon_small"
                        android:layout_height="@dimen/icon_small"
                        android:src="@drawable/ic_arrow_forward"
                        android:contentDescription="@null"
                        app:tint="?attr/colorOnSurfaceVariant" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Logout Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnLogout"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_large"
                android:text="@string/logout"
                android:textColor="@color/error"
                app:icon="@drawable/ic_logout"
                app:iconTint="@color/error"
                app:strokeColor="@color/error" />

            <!-- Version -->
            <TextView
                android:id="@+id/tvVersion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_large"
                android:layout_marginBottom="@dimen/margin_large"
                android:gravity="center"
                android:textAppearance="@style/TextAppearance.Inventario.Caption"
                android:textColor="?attr/colorOnSurfaceVariant"
                tools:text="Versión 1.0.0" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>