<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="@string/settings" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/margin_medium">

            <!-- User Profile Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardProfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Widget.Inventario.CardView.Filled"
                android:clickable="true"
                android:focusable="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/padding_medium"
                    android:gravity="center_vertical">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/ivUserAvatar"
                        android:layout_width="@dimen/icon_xlarge"
                        android:layout_height="@dimen/icon_xlarge"
                        android:src="@drawable/ic_person"
                        android:scaleType="centerCrop"
                        android:background="?attr/colorPrimaryContainer"
                        android:padding="@dimen/padding_medium"
                        app:shapeAppearanceOverlay="@style/ShapeAppearance.Inventario.Circle"
                        app:tint="?attr/colorPrimary" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="@dimen/margin_medium"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvUserName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="@style/TextAppearance.Inventario.Title"
                            tools:text="Juan Pérez" />

                        <TextView
                            android:id="@+id/tvUserRole"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="@style/TextAppearance.Inventario.Body"
                            android:textColor="?attr/colorOnSurfaceVariant"
                            tools:text="Propietario" />

                        <TextView
                            android:id="@+id/tvUserEmail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="@style/TextAppearance.Inventario.Caption"
                            android:textColor="?attr/colorOnSurfaceVariant"
                            tools:text="juan@mitienda.com" />

                    </LinearLayout>

                    <ImageView
                        android:layout_width="@dimen/icon_small"
                        android:layout_height="@dimen/icon_small"
                        android:src="@drawable/ic_arrow_forward"
                        android:contentDescription="@null"
                        app:tint="?attr/colorOnSurfaceVariant" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Business Settings Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_large"
                android:layout_marginStart="@dimen/margin_small"
                android:text="@string/business_settings"
                android:textAppearance="@style/TextAppearance.Inventario.Caption"
                android:textColor="?attr/colorPrimary"
                android:textStyle="bold" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_small"
                style="@style/Widget.Inventario.CardView.Outlined">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:divider="?android:attr/listDivider"
                    android:showDividers="middle">

                    <!-- Business Info -->
                    <LinearLayout
                        android:id="@+id/itemBusinessInfo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/padding_medium"
                        android:gravity="center_vertical"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true">

                        <ImageView
                            android:layout_width="@dimen/icon_medium"
                            android:layout_height="@dimen/icon_medium"
                            android:src="@drawable/ic_home"
                            android:contentDescription="@null"
                            app:tint="?attr/colorOnSurfaceVariant" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="@dimen/margin_medium"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/business_info"
                                android:textAppearance="@style/TextAppearance.Inventario.Body" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/business_info_description"
                                android:textAppearance="@style/TextAppearance.Inventario.Caption"
                                android:textColor="?attr/colorOnSurfaceVariant" />

                        </LinearLayout>

                        <ImageView
                            android:layout_width="@dimen/icon_small"
                            android:layout_height="@dimen/icon_small"
                            android:src="@drawable/ic_arrow_forward"
                            android:contentDescription="@null"
                            app:tint="?attr/colorOnSurfaceVariant" />

                    </LinearLayout>

                    <!-- Categories -->
                    <LinearLayout
                        android:id="@+id/itemCategories"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/padding_medium"
                        android:gravity="center_vertical"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true">

                        <ImageView
                            android:layout_width="@dimen/icon_medium"
                            android:layout_height="@dimen/icon_medium"
                            android:src="@drawable/ic_category"
                            android:contentDescription="@null"
                            app:tint="?attr/colorOnSurfaceVariant" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="@dimen/margin_medium"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/categories"
                                android:textAppearance="@style/TextAppearance.Inventario.Body" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/categories_description"
                                android:textAppearance="@style/TextAppearance.Inventario.Caption"
                                android:textColor="?attr/colorOnSurfaceVariant" />

                        </LinearLayout>

                        <ImageView
                            android:layout_width="@dimen/icon_small"
                            android:layout_height="@dimen/icon_small"
                            android:src="@drawable/ic_arrow_forward"
                            android:contentDescription="@null"
                            app:tint="?attr/colorOnSurfaceVariant" />

                    </LinearLayout>

                    <!-- Suppliers -->
                    <LinearLayout
                        android:id="@+id/itemSuppliers"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/padding_medium"
                        android:gravity="center_vertical"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true">

                        <ImageView
                            android:layout_width="@dimen/icon_medium"
                            android:layout_height="@dimen/icon_medium"
                            android:src="@drawable/ic_person"
                            android:contentDescription="@null"
                            app:tint="?attr/colorOnSurfaceVariant" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="@dimen/margin_medium"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/suppliers"
                                android:textAppearance="@style/TextAppearance.Inventario.Body" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/suppliers_description"
                                android:textAppearance="@style/TextAppearance.Inventario.Caption"
                                android:textColor="?attr/colorOnSurfaceVariant" />

                        </LinearLayout>

                        <ImageView
                            android:layout_width="@dimen/icon_small"
                            android:layout_height="@dimen/icon_small"
                            android:src="@drawable/ic_arrow_forward"
                            android:contentDescription="@null"
                            app:tint="?attr/colorOnSurfaceVariant" />

                    </LinearLayout>

                    <!-- Users (Owner Only) -->
                    <LinearLayout
                        android:id="@+id/itemUsers"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/padding_medium"
                        android:gravity="center_vertical"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:visibility="gone"
                        tools:visibility="visible">

                        <ImageView
                            android:layout_width="@dimen/icon_medium"
                            android:layout_height="@dimen/icon_medium"
                            android:src="@drawable/ic_person"
                            android:contentDescription="@null"
                            app:tint="?attr/colorOnSurfaceVariant" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="@dimen/margin_medium"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/users"
                                android:textAppearance="@style/TextAppearance.Inventario.Body" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/users_description"
                                android:textAppearance="@style/TextAppearance.Inventario.Caption"
                                android:textColor="?attr/colorOnSurfaceVariant" />

                        </LinearLayout>

                        <ImageView
                            android:layout_width="@dimen/icon_small"
                            android:layout_height="@dimen/icon_small"
                            android:src="@drawable/ic_arrow_forward"
                            android:contentDescription="@null"
                            app:tint="?attr/colorOnSurfaceVariant" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- App Settings Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_large"
                android:layout_marginStart="@dimen/margin_small"
                android:text="@string/app_settings"
                android:textAppearance="@style/TextAppearance.Inventario.Caption"
                android:textColor="?attr/colorPrimary"
                android:textStyle="bold" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_small"
                style="@style/Widget.Inventario.CardView.Outlined">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:divider="?android:attr/listDivider"
                    android:showDividers="middle">

                    <!-- Dark Mode -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/padding_medium"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="@dimen/icon_medium"
                            android:layout_height="@dimen/icon_medium"
                            android:src="@drawable/ic_settings"
                            android:contentDescription="@null"
                            app:tint="?attr/colorOnSurfaceVariant" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="@dimen/margin_medium"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/dark_mode"
                                android:textAppearance="@style/TextAppearance.Inventario.Body" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/dark_mode_description"
                                android:textAppearance="@style/TextAppearance.Inventario.Caption"
                                android:textColor="?attr/colorOnSurfaceVariant" />

                        </LinearLayout>

                        <com.google.android.material.materialswitch.MaterialSwitch
                            android:id="@+id/switchDarkMode"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <!-- Sound Effects -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/padding_medium"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="@dimen/icon_medium"
                            android:layout_height="@dimen/icon_medium"
                            android:src="@drawable/ic_settings"
                            android:contentDescription="@null"
                            app:tint="?attr/colorOnSurfaceVariant" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="@dimen/margin_medium"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/sound_effects"
                                android:textAppearance="@style/TextAppearance.Inventario.Body" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/sound_effects_description"
                                android:textAppearance="@style/TextAppearance.Inventario.Caption"
                                android:textColor="?attr/colorOnSurfaceVariant" />

                        </LinearLayout>

                        <com.google.android.material.materialswitch.MaterialSwitch
                            android:id="@+id/switchSoundEffects"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="true" />

                    </LinearLayout>

                    <!-- Low Stock Notifications -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/padding_medium"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="@dimen/icon_medium"
                            android:layout_height="@dimen/icon_medium"
                            android:src="@drawable/ic_warning"
                            android:contentDescription="@null"
                            app:tint="?attr/colorOnSurfaceVariant" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="@dimen/margin_medium"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/low_stock_notifications"
                                android:textAppearance="@style/TextAppearance.Inventario.Body" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/low_stock_notifications_description"
                                android:textAppearance="@style/TextAppearance.Inventario.Caption"
                                android:textColor="?attr/colorOnSurfaceVariant" />

                        </LinearLayout>

                        <com.google.android.material.materialswitch.MaterialSwitch
                            android:id="@+id/switchLowStockNotifications"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="true" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Sync Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_large"
                android:layout_marginStart="@dimen/margin_small"
                android:text="@string/sync_settings"
                android:textAppearance="@style/TextAppearance.Inventario.Caption"
                android:textColor="?attr/colorPrimary"
                android:textStyle="bold" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_small"
                style="@style/Widget.Inventario.CardView.Outlined">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/padding_medium">

                    <!-- Sync Status -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:id="@+id/ivSyncStatus"
                            android:layout_width="@dimen/icon_medium"
                            android:layout_height="@dimen/icon_medium"
                            android:src="@drawable/ic_cloud"
                            android:contentDescription="@null"
                            app:tint="@color/success" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="@dimen/margin_medium"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvSyncStatus"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/sync_status_synced"
                                android:textAppearance="@style/TextAppearance.Inventario.Body" />

                            <TextView
                                android:id="@+id/tvLastSync"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="@style/TextAppearance.Inventario.Caption"
                                android:textColor="?attr/colorOnSurfaceVariant"
                                tools:text="Última sincronización: Hace 5 minutos" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Pending Changes -->
                    <LinearLayout
                        android:id="@+id/layoutPendingChanges"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_medium"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="@dimen/padding_small"
                        android:background="@drawable/bg_warning_rounded"
                        android:visibility="gone"
                        tools:visibility="visible">

                        <ImageView
                            android:layout_width="@dimen/icon_small"
                            android:layout_height="@dimen/icon_small"
                            android:src="@drawable/ic_warning"
                            android:contentDescription="@null"
                            app:tint="@color/warning" />

                        <TextView
                            android:id="@+id/tvPendingChanges"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="@dimen/margin_small"
                            android:textAppearance="@style/TextAppearance.Inventario.Caption"
                            tools:text="5 cambios pendientes de sincronizar" />

                    </LinearLayout>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnSyncNow"
                        style="@style/Widget.Inventario.Button.Outlined"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_medium"
                        android:text="@string/sync_now"
                        app:icon="@drawable/ic_cloud" />

                    <!-- Server Configuration -->
                    <LinearLayout
                        android:id="@+id/itemServerConfig"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_medium"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:padding="@dimen/padding_small">

                        <ImageView
                            android:layout_width="@dimen/icon_medium"
                            android:layout_height="@dimen/icon_medium"
                            android:src="@drawable/ic_settings"
                            android:contentDescription="@null"
                            app:tint="?attr/colorOnSurfaceVariant" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="@dimen/margin_medium"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/server_config"
                                android:textAppearance="@style/TextAppearance.Inventario.Body" />

                            <TextView
                                android:id="@+id/tvServerUrl"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="@style/TextAppearance.Inventario.Caption"
                                android:textColor="?attr/colorOnSurfaceVariant"
                                tools:text="192.168.1.100:3000" />

                        </LinearLayout>

                        <ImageView
                            android:layout_width="@dimen/icon_small"
                            android:layout_height="@dimen/icon_small"
                            android:src="@drawable/ic_arrow_forward"
                            android:contentDescription="@null"
                            app:tint="?attr/colorOnSurfaceVariant" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- About Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_large"
                android:layout_marginStart="@dimen/margin_small"
                android:text="@string/about"
                android:textAppearance="@style/TextAppearance.Inventario.Caption"
                android:textColor="?attr/colorPrimary"
                android:textStyle="bold" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_small"
                style="@style/Widget.Inventario.CardView.Outlined">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:divider="?android:attr/listDivider"
                    android:showDividers="middle">

                    <!-- Version -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/padding_medium"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="@dimen/icon_medium"
                            android:layout_height="@dimen/icon_medium"
                            android:src="@drawable/ic_inventory"
                            android:contentDescription="@null"
                            app:tint="?attr/colorOnSurfaceVariant" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="@dimen/margin_medium"
                            android:text="@string/version"
                            android:textAppearance="@style/TextAppearance.Inventario.Body" />

                        <TextView
                            android:id="@+id/tvVersion"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="@style/TextAppearance.Inventario.Body"
                            android:textColor="?attr/colorOnSurfaceVariant"
                            tools:text="1.0.0" />

                    </LinearLayout>

                    <!-- Help -->
                    <LinearLayout
                        android:id="@+id/itemHelp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/padding_medium"
                        android:gravity="center_vertical"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true">

                        <ImageView
                            android:layout_width="@dimen/icon_medium"
                            android:layout_height="@dimen/icon_medium"
                            android:src="@drawable/ic_settings"
                            android:contentDescription="@null"
                            app:tint="?attr/colorOnSurfaceVariant" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="@dimen/margin_medium"
                            android:text="@string/help"
                            android:textAppearance="@style/TextAppearance.Inventario.Body" />

                        <ImageView
                            android:layout_width="@dimen/icon_small"
                            android:layout_height="@dimen/icon_small"
                            android:src="@drawable/ic_arrow_forward"
                            android:contentDescription="@null"
                            app:tint="?attr/colorOnSurfaceVariant" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Logout Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnLogout"
                style="@style/Widget.Inventario.Button.Error"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_large"
                android:layout_marginBottom="@dimen/margin_large"
                android:text="@string/logout" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

