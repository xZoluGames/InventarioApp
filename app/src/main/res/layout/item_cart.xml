<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="@dimen/margin_small"
    style="@style/Widget.Inventario.CardView.Outlined">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/padding_medium"
        android:gravity="center_vertical">

        <!-- Product Image -->
        <ImageView
            android:id="@+id/ivProductImage"
            android:layout_width="@dimen/image_small"
            android:layout_height="@dimen/image_small"
            android:src="@drawable/ic_placeholder_product"
            android:scaleType="centerCrop"
            android:contentDescription="@string/product_image" />

        <!-- Product Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginHorizontal="@dimen/margin_medium"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvProductName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.Inventario.Body"
                android:textStyle="bold"
                android:maxLines="2"
                android:ellipsize="end"
                tools:text="Coca Cola 500ml" />

            <TextView
                android:id="@+id/tvVariant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.Inventario.Caption"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:visibility="gone"
                tools:visibility="visible"
                tools:text="Variante: Grande" />

            <TextView
                android:id="@+id/tvUnitPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.Inventario.Caption"
                android:textColor="?attr/colorOnSurfaceVariant"
                tools:text="₲ 8.000 c/u" />

            <!-- Quantity Controls -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_small"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnDecrease"
                    style="@style/Widget.Material3.Button.IconButton.Outlined"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    app:icon="@drawable/ic_remove"
                    app:iconSize="18dp" />

                <TextView
                    android:id="@+id/tvQuantity"
                    android:layout_width="48dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textAppearance="@style/TextAppearance.Inventario.Title"
                    tools:text="2" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnIncrease"
                    style="@style/Widget.Material3.Button.IconButton.Outlined"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    app:icon="@drawable/ic_add"
                    app:iconSize="18dp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Total and Delete -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="end">

            <TextView
                android:id="@+id/tvSubtotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.Inventario.Price"
                android:textColor="?attr/colorPrimary"
                tools:text="₲ 16.000" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDelete"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/remove"
                android:textColor="@color/error"
                app:icon="@drawable/ic_delete"
                app:iconTint="@color/error"
                app:iconSize="16dp" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
