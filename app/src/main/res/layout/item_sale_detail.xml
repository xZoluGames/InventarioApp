<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:gravity="center_vertical">

    <!-- Product Image -->
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/ivProduct"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:scaleType="centerCrop"
        app:shapeAppearanceOverlay="@style/RoundedCorner"
        tools:src="@drawable/placeholder_product" />

    <!-- Product Info -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginStart="12dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvProductName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textAppearance="?textAppearanceBodyMedium"
            android:textColor="@color/text_primary"
            android:textStyle="bold"
            tools:text="Producto de ejemplo" />

        <TextView
            android:id="@+id/tvVariantInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:textAppearance="?textAppearanceBodySmall"
            android:textColor="@color/text_secondary"
            android:visibility="gone"
            tools:text="Color: Rojo"
            tools:visibility="visible" />
        <!-- Agregar este TextView despuÃ©s de tvVariantInfo -->
        <TextView
            android:id="@+id/tvQuantityPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:textAppearance="?textAppearanceBodySmall"
            android:textColor="@color/text_secondary"
            tools:text="2 x Gs. 50.000" />
        <TextView
            android:id="@+id/tvUnitPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:textAppearance="?textAppearanceBodySmall"
            android:textColor="@color/text_hint"
            tools:text="Gs. 50.000 c/u" />

    </LinearLayout>

    <!-- Quantity and Subtotal -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="end">

        <TextView
            android:id="@+id/tvQuantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?textAppearanceBodyMedium"
            android:textColor="@color/text_secondary"
            tools:text="x2" />

        <TextView
            android:id="@+id/tvSubtotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:textAppearance="?textAppearanceTitleSmall"
            android:textColor="@color/primary"
            android:textStyle="bold"
            tools:text="Gs. 100.000" />

    </LinearLayout>

</LinearLayout>
