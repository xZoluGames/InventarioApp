<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="@dimen/margin_small"
    style="@style/Widget.Inventario.CardView.Outlined"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/padding_medium"
        android:gravity="center_vertical">

        <!-- Variant Color/Image -->
        <View
            android:id="@+id/viewVariantColor"
            android:layout_width="@dimen/icon_medium"
            android:layout_height="@dimen/icon_medium"
            android:background="@drawable/bg_variant_color"
            tools:backgroundTint="@color/primary" />

        <!-- Variant Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/margin_medium"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvVariantName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.Inventario.Body"
                android:textStyle="bold"
                tools:text="Rojo - Grande" />

            <TextView
                android:id="@+id/tvVariantSku"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.Inventario.Caption"
                android:textColor="?attr/colorOnSurfaceVariant"
                tools:text="SKU: VAR-001" />

        </LinearLayout>

        <!-- Stock Info -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="end">

            <TextView
                android:id="@+id/tvVariantPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.Inventario.Body"
                android:textColor="?attr/colorPrimary"
                android:textStyle="bold"
                tools:text="â‚² 45.000" />

            <TextView
                android:id="@+id/tvVariantStock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.Inventario.Caption"
                android:textColor="?attr/colorOnSurfaceVariant"
                tools:text="Stock: 12" />

        </LinearLayout>

        <!-- Edit Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnEditVariant"
            style="@style/Widget.Material3.Button.IconButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_small"
            app:icon="@drawable/ic_settings"
            app:iconTint="?attr/colorOnSurfaceVariant" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
