<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Estilos adicionales faltantes -->
    
    <!-- CardView Outlined Style -->
    <style name="Widget.Inventario.CardView.Outlined" parent="Widget.Material3.CardView.Outlined">
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">0dp</item>
        <item name="strokeColor">@color/outline</item>
        <item name="strokeWidth">1dp</item>
        <item name="cardBackgroundColor">@color/surface</item>
    </style>
    
    <!-- Button Success Style -->
    <style name="Widget.Inventario.Button.Success" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/success</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">false</item>
    </style>
    
    <!-- Button Danger Style -->
    <style name="Widget.Inventario.Button.Danger" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/error</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">false</item>
    </style>
    
    <!-- CardView Filled Style -->
    <style name="Widget.Inventario.CardView.Filled" parent="Widget.Material3.CardView.Filled">
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">0dp</item>
        <item name="cardBackgroundColor">@color/surface_variant</item>
    </style>
    <!-- Estilos faltantes - Parte 4 (solo los del log) -->

    <style name="TextAppearance.Inventario.Headline" parent="TextAppearance.Material3.HeadlineSmall">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">24sp</item>
        <item name="fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAppearance.Inventario.Headline2" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">28sp</item>
        <item name="fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAppearance.Inventario.BodySmall" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textSize">12sp</item>
    </style>
    <!-- Estilos faltantes - Parte 5 -->

    <style name="Widget.Inventario.Button.Error" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/error</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ShapeAppearance.Inventario.Circle" parent="ShapeAppearance.Material3.Corner.Full">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
    <!-- Estilo para esquinas redondeadas de imÃ¡genes -->
    <style name="RoundedCorner" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="RoundedCornerSmall" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">4dp</item>
    </style>

    <style name="RoundedCornerLarge" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>


</resources>
