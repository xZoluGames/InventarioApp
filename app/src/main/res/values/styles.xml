<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Estilos adicionales faltantes -->
    
    <!-- CardView Outlined Style -->
    <style name="Widget.Inventario.CardView.Outlined" parent="Widget.Material3.CardView.Outlined">
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">0dp</item>
        <item name="strokeColor">@color/outline</item>
        <item name="strokeWidth">1dp</item>
        <item name="cardBackgroundColor">@color/surface</item>
    </style>
    
    <!-- Button Success Style -->
    <style name="Widget.Inventario.Button.Success" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/success</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">false</item>
    </style>
    
    <!-- Button Danger Style -->
    <style name="Widget.Inventario.Button.Danger" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/error</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">false</item>
    </style>
    
    <!-- CardView Filled Style -->
    <style name="Widget.Inventario.CardView.Filled" parent="Widget.Material3.CardView.Filled">
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">0dp</item>
        <item name="cardBackgroundColor">@color/surface_variant</item>
    </style>
</resources>
