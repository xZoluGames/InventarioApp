<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base Application Theme -->
    <style name="Theme.Inventario" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary colors -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorOnPrimary">@color/text_on_primary</item>
        
        <!-- Secondary colors -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_variant</item>
        <item name="colorOnSecondary">@color/text_on_secondary</item>
        
        <!-- Background colors -->
        <item name="android:colorBackground">@color/background</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnSurface">@color/text_primary</item>
        <item name="colorOnBackground">@color/text_primary</item>
        
        <!-- Error colors -->
        <item name="colorError">@color/error</item>
        <item name="colorOnError">@android:color/white</item>
        
        <!-- Status bar -->
        <item name="android:statusBarColor">@color/primary_dark</item>
        <item name="android:navigationBarColor">@color/surface</item>
        <item name="android:windowLightStatusBar">false</item>
        
        <!-- Text appearances -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="android:textColorHint">@color/text_hint</item>
        
        <!-- Component styles -->
        <item name="materialButtonStyle">@style/Widget.Inventario.Button</item>
        <item name="textInputStyle">@style/Widget.Inventario.TextInputLayout</item>
        <item name="materialCardViewStyle">@style/Widget.Inventario.CardView</item>
        <item name="bottomNavigationStyle">@style/Widget.Inventario.BottomNavigation</item>
        <item name="floatingActionButtonStyle">@style/Widget.Inventario.FloatingActionButton</item>
        <item name="toolbarStyle">@style/Widget.Inventario.Toolbar</item>
    </style>
    
    <!-- Splash Screen Theme -->
    <style name="Theme.Inventario.Splash" parent="Theme.Inventario">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>
    
    <!-- Toolbar Style -->
    <style name="Widget.Inventario.Toolbar" parent="Widget.Material3.Toolbar">
        <item name="android:background">@color/primary</item>
        <item name="titleTextColor">@color/text_on_primary</item>
        <item name="subtitleTextColor">@color/text_on_primary</item>
        <item name="navigationIconTint">@color/text_on_primary</item>
    </style>
    
    <!-- Button Styles -->
    <style name="Widget.Inventario.Button" parent="Widget.Material3.Button">
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">8dp</item>
    </style>
    
    <style name="Widget.Inventario.Button.Outlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">8dp</item>
        <item name="strokeColor">@color/primary</item>
    </style>
    
    <style name="Widget.Inventario.Button.Text" parent="Widget.Material3.Button.TextButton">
        <item name="android:textAllCaps">false</item>
    </style>
    
    <style name="Widget.Inventario.Button.Success" parent="Widget.Inventario.Button">
        <item name="backgroundTint">@color/success</item>
    </style>
    
    <style name="Widget.Inventario.Button.Warning" parent="Widget.Inventario.Button">
        <item name="backgroundTint">@color/warning</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>
    
    <style name="Widget.Inventario.Button.Error" parent="Widget.Inventario.Button">
        <item name="backgroundTint">@color/error</item>
    </style>
    
    <!-- TextInputLayout Style -->
    <style name="Widget.Inventario.TextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/text_input_stroke_color</item>
        <item name="hintTextColor">@color/primary</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
    </style>
    
    <style name="Widget.Inventario.TextInputLayout.Dense" parent="Widget.Inventario.TextInputLayout">
        <item name="materialThemeOverlay">@style/ThemeOverlay.Inventario.TextInputLayout.Dense</item>
    </style>
    
    <style name="ThemeOverlay.Inventario.TextInputLayout.Dense" parent="">
        <item name="editTextStyle">@style/Widget.Inventario.TextInputEditText.Dense</item>
    </style>
    
    <style name="Widget.Inventario.TextInputEditText.Dense" parent="Widget.Material3.TextInputEditText.OutlinedBox.Dense">
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>
    
    <!-- CardView Style -->
    <style name="Widget.Inventario.CardView" parent="Widget.Material3.CardView.Filled">
        <item name="cardBackgroundColor">@color/card_background</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">2dp</item>
        <item name="contentPadding">16dp</item>
    </style>
    
    <style name="Widget.Inventario.CardView.Outlined" parent="Widget.Material3.CardView.Outlined">
        <item name="cardBackgroundColor">@color/card_background</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/divider</item>
    </style>
    
    <!-- Bottom Navigation Style -->
    <style name="Widget.Inventario.BottomNavigation" parent="Widget.Material3.BottomNavigationView">
        <item name="backgroundTint">@color/surface</item>
        <item name="itemIconTint">@color/nav_item_color</item>
        <item name="itemTextColor">@color/nav_item_color</item>
        <item name="labelVisibilityMode">labeled</item>
        <item name="elevation">8dp</item>
    </style>
    
    <!-- FloatingActionButton Style -->
    <style name="Widget.Inventario.FloatingActionButton" parent="Widget.Material3.FloatingActionButton.Primary">
        <item name="backgroundTint">@color/secondary</item>
        <item name="tint">@color/text_on_secondary</item>
        <item name="elevation">6dp</item>
    </style>
    
    <!-- Text Styles -->
    <style name="TextAppearance.Inventario.Headline1" parent="TextAppearance.Material3.HeadlineLarge">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">28sp</item>
        <item name="fontFamily">sans-serif-medium</item>
    </style>
    
    <style name="TextAppearance.Inventario.Headline2" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">24sp</item>
    </style>
    
    <style name="TextAppearance.Inventario.Title" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">sans-serif-medium</item>
    </style>
    
    <style name="TextAppearance.Inventario.Subtitle" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textSize">16sp</item>
    </style>
    
    <style name="TextAppearance.Inventario.Body" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">16sp</item>
    </style>
    
    <style name="TextAppearance.Inventario.BodySmall" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textSize">14sp</item>
    </style>
    
    <style name="TextAppearance.Inventario.Caption" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textColor">@color/text_hint</item>
        <item name="android:textSize">12sp</item>
    </style>
    
    <style name="TextAppearance.Inventario.Price" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textColor">@color/primary</item>
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">sans-serif-medium</item>
    </style>
    
    <style name="TextAppearance.Inventario.PriceLarge" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="android:textColor">@color/primary</item>
        <item name="android:textSize">28sp</item>
        <item name="fontFamily">sans-serif-bold</item>
    </style>
    
    <!-- Chip Style -->
    <style name="Widget.Inventario.Chip" parent="Widget.Material3.Chip.Filter">
        <item name="chipBackgroundColor">@color/chip_background_color</item>
        <item name="chipCornerRadius">16dp</item>
    </style>
    
    <style name="Widget.Inventario.Chip.Choice" parent="Widget.Material3.Chip.Suggestion">
        <item name="chipBackgroundColor">@color/chip_background_color</item>
        <item name="chipCornerRadius">16dp</item>
    </style>
    
    <!-- Dialog Style -->
    <style name="Theme.Inventario.Dialog" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorSecondary">@color/secondary</item>
        <item name="materialAlertDialogTitleTextStyle">@style/TextAppearance.Inventario.Title</item>
    </style>
    
    <!-- Bottom Sheet Style -->
    <style name="Theme.Inventario.BottomSheet" parent="ThemeOverlay.Material3.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/Widget.Inventario.BottomSheet</item>
    </style>
    
    <style name="Widget.Inventario.BottomSheet" parent="Widget.Material3.BottomSheet">
        <item name="shapeAppearance">@style/ShapeAppearance.Inventario.BottomSheet</item>
    </style>
    
    <style name="ShapeAppearance.Inventario.BottomSheet" parent="ShapeAppearance.Material3.Corner.ExtraLarge">
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>
    
    <!-- Scanner Theme -->
    <style name="Theme.Inventario.Scanner" parent="Theme.Inventario">
        <item name="android:windowFullscreen">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>
</resources>
